@model fainting.goat.Models.MarkdownPageModel

@{
    ViewBag.Title = @Model.FaintingGoatWebTitle;
}

@section header{
    @{
        if (!string.IsNullOrEmpty(Model.HeaderHtml)) {
            var hWriter = this.GetOutputWriter();
                hWriter.Write(Model.HeaderHtml);
        }
    }
}

@{ 
    var writer = this.GetOutputWriter();
    writer.Write(Model.HtmlToRender);
}

@section footer{
    @if (!string.IsNullOrEmpty(Model.FooterHtml)) {
        var fWriter = this.GetOutputWriter();
            fWriter.Write(Model.FooterHtml);
    }
}